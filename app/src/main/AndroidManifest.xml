<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.errorlabs.ninemenmorris">

    <application
        android:allowBackup="true"
        android:icon="@drawable/intro"
        android:label="@string/app_name"
        android:roundIcon="@drawable/intro"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".Activities.MainScreen" />

        <activity android:name=".Activities.AboutGameRules"
            android:parentActivityName=".Activities.MainScreen"></activity>
    </application>

</manifest>